<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/select_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_welcome" />
    <Button android:id="@+id/select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_button" />
    <Button android:id="@+id/use_last_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:visibility="invisible"
        android:text="@string/select_previous" />
</LinearLayout>
